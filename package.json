{
  "name": "reserva-aviones",
  "version": "1.0.0",
  "description": "Aplicaci√≥n de reserva de vuelos",
  "main": "src/server.js",
  "scripts": {
   "start": "node src/server.js",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server": "nodemon server.js",
    "dev:full": "concurrently \"npm run server\" \"npm run dev\"",
    "prod": "npm run build && npm run server",
    "client": "npm run serve --prefix client",
    "migrate:create": "sequelize migration:generate --name",
    "migrate:up": "sequelize db:migrate",
    "migrate:down": "sequelize db:migrate:undo",
    "migrate:reset": "sequelize db:migrate:undo:all && sequelize db:migrate",
    "test": "jest"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.2",
    "vue": "^3.3.4",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.3",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.1",
    "vite": "^6.2.3"
  }
}
